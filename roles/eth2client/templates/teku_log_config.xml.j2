<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="{{beacon_log_level | upper}}" monitorInterval="5">
    <Properties>
        <Property name="root.log.level">{{beacon_log_level | upper}}</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} | %-25.25t | %-5level | %-30.30c{1} | %msg  %throwable%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- disables the "Quartz enterprise job scheduler" timing-event spam when using debug level or lower -->
        <Logger name="org.quartz" level="INFO"/>
        <Root level="${sys:root.log.level}">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
